<% action = login ? sessions_path : users_path %>
<% submit = login ? 'Login' : 'Create' %>
<% footer_action = login ? 'Login to your account' : 'Create an account' %>

<form action='<%= action %>' method='POST'>
  <%= auth_token %>

  <label for='username'>Username: </label>
  <input id='username'
         name='user[username]'
         type='text'
         value='<%= user.username %>'>
  <br>

  <label for='password'>Password: </label>
  <input id='password'
         name='user[password]'
         type='password'
         value='<%= user.password %>'>

  <input type='submit' value='<%= submit %>'>
</form>

<% content_for :footer do %>
  <p> <%= footer_action %> to rent some seriously great cats. </p>
<% end %> 