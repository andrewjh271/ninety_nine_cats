<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>

    <div>
        <form method='GET' action='<%= cats_url %>' style='display: inline;'>
          <button type='submit'>Home</button>
        </form>

    <% if current_user %>
      
        <form method='GET' action='<%= users_url %>' style='display: inline;'>
          <button type='submit'><%= current_user.username %></button>
        </form>
        <form method='POST' action='<%= sessions_url %>' style='display: inline;'>
          <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
          <input type='hidden' name='_method' value='<%= 'DELETE' %>'>
          <button type='submit'>Logout</button>
        </form>
    <% else %>
      <form method='GET' style='display: inline;'>
        <button type='submit'
          formaction='<%= new_sessions_url %>'>Login</button>
        <button type='submit'
          formaction='<%= new_user_url %>'>Create new account</button>
      </form>
    <% end %>
    </div>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
