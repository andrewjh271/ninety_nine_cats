<li>
  Cat: <%= cat_rental_request.cat_name %>;
  Start: <%= cat_rental_request.start_date %>;
  End: <%= cat_rental_request.end_date %>;
  Status: <%= cat_rental_request.status %>;
  Requester: <%= cat_rental_request.cat_requester %>

  <% if cat_rental_request.pending? && cat_rental_request.cat_owner == current_user %>
    <form method='POST' style='display: inline;'>
    <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>

      <button type='submit'
        formaction='<%= approve_cat_rental_request_url(cat_rental_request) %>'>Approve</button>
      <button type='submit'
        formaction='<%= deny_cat_rental_request_url(cat_rental_request) %>'>Deny</button>
    </form>
  <% end %>
  <br>
  <br>
</li>